FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      beamProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Number of beams
nBeams 1;

// Note: some beam geometry/mesh settings are only used by
// createCircularBeamMesh and some are only used by
// createMultipleBeamMesh. And some are used by the solver
// To avoid issues, you may like to comment out anything that should not be used

// Definition of the radius used by createCircularBeamMesh
// Ideally, we should use createMultipleBeamMesh but this hack is fine
// for one beam
R    R [0 1 0 0 0 0 0] 0.0030;

// Definition of beam cross-sections used by the solver and createMultipleBeamMesh
beams
(
    beamOne
    {
        // crossSectionModel circle;
        circleCrossSectionModelDict
        {
            // Beam radius
            radius 0.0030;
        }

        crossSectionModel rectangle;
        rectangleCrossSectionModelDict
        {
            b     0.0030;
            h     0.0015;
            nx    10;
            ny    10;
        }

        // Length
        length 0.15;

        // Number of segments
        nSegments 100;
    }
);

// Length and number of segments
#include "$FOAM_CASE/constant/length.dat";

// Circumferential resolution (for visualisation only)
//nTheta 32;

// Beam model
beamModel coupledTotalLagNewtonRaphsonBeam;

coupledTotalLagNewtonRaphsonBeamCoeffs
{
    // Physical properties
    E E [1 -1 -2 0 0 0 0] 2.20e9;
    G G [1 -1 -2 0 0 0 0] 1.1e9;
    rho rho [1 -3 0 0 0 0 0] 1090;

    // Morison force flag
    morisonForce yes;

    // Patch names for the two ends of the beam
    startPatchName left;
    endPatchName right;

    // Newton-Raphons tolerance and maximum number of corrector iterations
    nCorrectors 10;
    convergenceTol 1e-8;

    // Print Newton-Raphson iteration residuals
    debug yes;

    // updatedLagrangian no;
    //objectiveInterpolation false;

    // Switch between steady-state and transient formulation
    steadyState false;

    // Newmark-beta integration scheme
    newmark false;
}

// ************************************************************************* //
