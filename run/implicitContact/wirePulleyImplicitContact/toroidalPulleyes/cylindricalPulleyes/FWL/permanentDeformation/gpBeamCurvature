set terminal postscript color solid
set output "beamCurvature.ps"

set xlabel "x, m"
set ylabel  "Curvature"

set grid
#set size ratio -1

set border linewidth 1.5

#set rmargin 2
#set lmargin 6
#set yrange [-1:0]
#set key top left


stats [450:900] './1/beamCurvature.dat' using 1:2 nooutput

set label 1 gprintf("Mean curvature = %g", STATS_mean_y) at STATS_mean_x,1.1*STATS_mean_y

plot "./1/beamCurvature.dat" using 1:2 notitle with lines, \
"" using 1:(STATS_mean_y) notitle with lines

