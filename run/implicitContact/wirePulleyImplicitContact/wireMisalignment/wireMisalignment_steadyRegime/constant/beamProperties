    //     Ep Ep [1 -1 -2 0 0 0 0] 0;

    //     elPredTol 1e-4;
    // }

    startPatchName left;
    endPatchName right;

    nCorrectors 100;
    convergenceTol 1e-10;

    debug yes;
    updatedLagrangian no;
}

conicalPulleys
(
    pulley_0
    {
        // origin (0 0 0);
